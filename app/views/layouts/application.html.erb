<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "FatPenguin" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Fatpenguin" %>">
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  </head>
  <body class="<%= controller_name %> <%= action_name %>">
		<div id="wrap">
	    <div class="navbar navbar-fixed-top">
	      <nav class="navbar-inner">
	        <div class="container">
	          <%= render 'layouts/navigation' %>
	        </div>
	      </nav>
	    </div>
	    <div id="main" role="main">
	      <div class="container">
	        <div class="content">
	           <div class="row">
	            <div class="span12">
	              <%= render 'layouts/messages' %>
	              <%= yield %>
	            </div>
	          </div>
	        </div>
	      </div> <!--! end of .container -->
	    </div> <!--! end of #main -->
		</div> <!--! end of #wrap -->
    <footer class="footer">
			<div class="container">
				<hr/>
					Breaking the ice since 2013
			</div>
    </footer>
  </body>
</html>

<div id="msgModal" 
	   class="modal fade" 
		 tabindex="-1" 
		 role="dialog" 
		 aria-labelledby="msgModalLabel" 
		 aria-hidden="true">
  <div class="modal-header">
    <button type="button" 
						class="close" 
						data-dismiss="modal" 
						aria-hidden="true">Ã—</button>
    <h3 id="msgModalLabel">Message <%= user.escape("name") %></h3>
  </div>
  <div class="modal-body">
		<img src="http://graph.facebook.com/<%= user.escape("uid") %>/picture?type=large" class="user-image" />
		<div class="user-content">
			<textarea id="message" rows="7"></textarea>
		</div>
  </div>
  <div class="modal-footer">
    <button class="btn" 
						data-dismiss="modal" 
						aria-hidden="true">Cancel</button>
						
    <button class="btn btn-primary" id="btnSend">Send!</button>
  </div>
</div>